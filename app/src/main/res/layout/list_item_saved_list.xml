<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@color/brand_light_blue"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewSavedItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/on_surface" />

        <TextView
            android:id="@+id/textViewSavedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/on_surface_muted" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopySavedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copy_list"
            android:textColor="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:backgroundTint="@color/brand_light_blue_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditSavedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:backgroundTint="@color/brand_light_blue_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteSavedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:backgroundTint="@color/brand_light_blue_dark" />
    </LinearLayout>
</LinearLayout>
